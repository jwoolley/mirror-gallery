{
  "name": "Mirror Gallery",
  "version": "1.1.1",
  "description": "MTG art reflector and twitter boy",
  "author": "Mark Diehr <mdiehr@gmail.com> (https://www.goodgamery.com)",
  "main": "mtgnews",
  "scripts": {
    "start": "node mtgnews",
    "start-debug": "node --inspect-brk --harmony mtgnews",
    "print": "node --harmony mtgnews",
    "lint": "gulp lint",
    "test": "node test/index.js",
    "watch": "gulp"
  },
  "engines": {
    "node": ">=18.9.1"
  },
  "dependencies": {
    "commander": "2.11.0",
    "fs-extra": "4.0.1",
    "jimp": "0.2.28",
    "js-yaml": "3.9.1",
    "lodash.merge": "4.6.0",
    "mastodon-api": "1.3.0",
    "request": "2.81.0",
    "svg2png": "4.1.1",
    "twit": "2.2.9",
    "webshot-node": "^0.18.3"
  },
  "devDependencies": {
    "co": "4.6.0",
    "eslint": "4.2.0",
    "fast-deep-equal": "1.0.0",
    "gulp": "3.9.1",
    "gulp-debug": "3.1.0",
    "gulp-eslint": "4.0.0",
    "gulp-jsonlint": "1.2.0",
    "gulp-util": "3.0.8",
    "gulp-yaml-validate": "1.0.2",
    "json-schema-traverse": "0.3.1",
    "run-sequence": "2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoodGamery/mtgnewsbot.git"
  },
  "keywords": [
    "Robot",
    "Twitter",
    "Mastodon"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GoodGamery/mtgnewsbot/issues"
  },
  "homepage": "https://twitter.com/mirror_gallery",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-mixed-spaces-and-tabs": 1,
      "no-unused-expressions": 1,
      "no-unused-vars": [
        1,
        {
          "vars": "all",
          "args": "after-used"
        }
      ],
      "strict": 2,
      "semi": [
        2,
        "always"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "false": {}
}
